= form_for([@project, @todo]) do |f|
  - if @todo.errors.any?
    #error_explanation
      %h2
        = pluralize(@todo.errors.count, "error")
        prohibited this todo from being saved:
      %ul
        - @todo.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :Task
    %br/
    = f.text_area :description
  .field
    = f.label "Assign to User"
    %br/
    = f.hidden_field :project_id, value: @project.id
    = f.autocomplete_field :user_email, autocomplete_user_project_users_path(project_id: @project.id), :update_element => {id: '#some_element'}
  .actions
    = f.submit
