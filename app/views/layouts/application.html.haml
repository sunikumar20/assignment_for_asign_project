%html
  %head
    %title Assignment
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - if current_user
      = current_user.email
      =link_to 'Sign out', destroy_user_session_path, :method => :delete
    = yield