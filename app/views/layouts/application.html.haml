!!!
%html
  %head
    %title Assignment
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    =  javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  / .hold-transition.skin-blue.sidebar-mini
  %body
    = render partial: 'layouts/header'
    .col-md-12
      - if notice.present?
        .alert.alert-success
          %strong Success :
          = notice
      - if warning.present?
        .alert.alert-success
          %strong Warning :
          = warning

    = yield